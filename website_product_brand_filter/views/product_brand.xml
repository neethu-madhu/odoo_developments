<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--define tree view-->
      <record model="ir.ui.view" id="product_brand_tree_view">
          <field name="name">Product Brand</field>
          <field name="model">product.brand</field>
          <field name="arch" type="xml">
              <tree string="Products Brands">
                  <field name="brand_name"/>
              </tree>
          </field>
      </record>

      <!--define form view-->
      <record model="ir.ui.view" id="product_brand_from_view">
          <field name="name">Product Brand</field>
          <field name="model">product.brand</field>
          <field name="arch" type="xml">
              <form string="Products Brands">
                  <sheet>
                      <group>
                          <group>
                              <field name="brand_name"/>
                              <field name="sequence_no"/>
                              <field name="parent_id"/>
                          </group>
                      </group>
                  </sheet>
              </form>
          </field>
      </record>
  <!--define action-->
    <record id="action_product_brand" model="ir.actions.act_window">
        <field name="name">Product Brand</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.brand</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new record!
            </p>
        </field>
    </record>
    <!--  define menu under configuration of website module    -->
    <menuitem id="menu_product_brand" name="Product Brand" parent="website_sale.menu_product_settings"
              action="action_product_brand"/>
</odoo>