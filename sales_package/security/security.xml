<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.module.category" id="module_category_packages">
        <field name="name">Package Management</field>
        <field name="description">Category for Package Management</field>
    </record>

    <record id="group_package_user" model="res.groups">
        <field name="name">User</field>
        <field name="category_id" ref="module_category_packages"/>
    </record>

    <record id="group_package_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="module_category_packages"/>
        <field name="implied_ids" eval="[(4, ref('group_package_user'))]"/>
    </record>
</odoo>