<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!--  form template  -->
    <template id="create_sales_package" name="Package Form">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure">
                    <section class="s_title parallax s_parallax_is_fixed bg-black-50 pt24 pb24" data-vcss="001" data-snippet="s_title" data-scroll-background-ratio="1">
                        <span class="s_parallax_bg oe_img_bg" style="background-image: url('/web/image/website.s_banner_default_image'); background-position: 50% 0;"/>
                        <div class="o_we_bg_filter bg-black-50"/>
                        <div class="container">
                            <h1>Sales Package</h1>
                        </div>
                    </section>
                </div><br/>
                <div class="container">
                    <div class="col-md-6">
                        <form action="/sale_package/form/submit">
                            <div class="s_website_form_rows row s_col_no_bgcolor">
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="package_name">Name</label>
                                        <div class="col-sm">
                                            <input type="text" class="form-control s_website_form_input" name="package_name" id="package_name" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="width">Width</label>
                                        <div class="col-sm">
                                            <input type="Integer" class="form-control s_website_form_input" name="width" id="width" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="height">Height</label>
                                        <div class="col-sm">
                                            <input type="Integer" class="form-control s_website_form_input" name="height" id="height" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="length">Length</label>
                                        <div class="col-sm">
                                            <input type="Integer" class="form-control s_website_form_input" name="length" id="length" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_field s_website_form_required">
                                    <div class="row s_col_no_resize s_col_no_bgcolor">
                                        <label class="col-form-label col-sm-auto s_website_form_label" style="width: 200px" for="maximum_weight">Weight</label>
                                        <div class="col-sm">
                                            <input type="Integer" class="form-control s_website_form_input" name="maximum_weight" id="maximum_weight" required="true" />
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group col-12 s_website_form_submit" align="center">
                                    <div style="width: 200px;" class="s_website_form_label"/>
                                    <button type="submit" class="btn btn-primary btn-lg s_website_form_send">Create</button>
                                    <span id="s_website_form_result"></span>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
              </div>
          </t>
    </template>
    <!--  load after submitting the form  -->
    <template id="package_thanks" name="Customer Form Successfully Submitted">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="container">
                    <div class="col-md-12">
                        <div class="alert alert-success">
                            Package created successfully.
                        </div>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
